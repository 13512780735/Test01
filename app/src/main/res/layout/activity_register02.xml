<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    tools:context=".activity.login.Register02Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_40"
        android:paddingTop="@dimen/dp_80"
        android:paddingRight="@dimen/dp_40">

        <RadioGroup
            android:id="@+id/mRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/mRb01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/tab_reg_background"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="新注册"></RadioButton>

            <RadioButton
                android:id="@+id/mRb02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/tab_reg_background"
                android:button="@null"
                android:gravity="center"
                android:text="绑定已有账号"></RadioButton>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_user"></ImageView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEtName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入账号"
                android:paddingLeft="@dimen/dp_20"></cn.nzy.library.ClearEditText>

        </LinearLayout>

        <View
            android:id="@+id/mVName"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/line"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvPass"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_pass"></ImageView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEtPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="请输入密码"
                android:paddingLeft="@dimen/dp_20"></cn.nzy.library.ClearEditText>

        </LinearLayout>
        <View
            android:id="@+id/mVPass"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/line"></View>
        <LinearLayout
            android:id="@+id/llPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvPasss"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_passs"></ImageView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEtPasss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="请再次输入密码"
                android:paddingLeft="@dimen/dp_20"></cn.nzy.library.ClearEditText>

        </LinearLayout>
        <View
            android:id="@+id/mVPasss"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/line"></View>




        <com.feemoo.fmapp.widght.BorderTextView
            android:id="@+id/mTvLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:text="同意协议并注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:contentBackColor="@color/button_confirm"
            app:cornerRadius="@dimen/dp_10"
            app:strokeColor01="#999999"
            app:strokeWidth01="0dp"></com.feemoo.fmapp.widght.BorderTextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="40dip"
            android:layout_marginBottom="@dimen/dp_100"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox01"
                style="@style/mycheckbox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:checked="true" />

            <TextView
                android:id="@+id/protocol_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="*注册即表示同意"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/button_confirm"
                android:layout_height="wrap_content"
                android:text="&#060;"></TextView>
            <TextView
                android:id="@+id/protocol_tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="用户协议"
                android:textColor="@color/button_confirm"
                />
            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/button_confirm"
                android:layout_height="wrap_content"
                android:text="&#062;"></TextView>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>