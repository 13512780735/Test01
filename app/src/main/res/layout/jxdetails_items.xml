<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.feemoo.widght.BorderRelativeLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:contentBackColor="@color/white"
        app:cornerRadius="@dimen/dp_10">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/projectImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_10"></com.makeramen.roundedimageview.RoundedImageView>
    </com.feemoo.widght.BorderRelativeLayout>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_10"
        android:singleLine="true"></TextView>
</LinearLayout>