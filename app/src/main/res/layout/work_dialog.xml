<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_my_bg"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/dp_30"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/icon_pop_top"></View>

    <TextView
        android:id="@+id/tv_online"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_aline"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="在线解压"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_down"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_down"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="下载"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_look"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_look"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="在线预览"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_share"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="分享"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_move"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_move"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="移动"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cloud"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_cloud"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="推永存空间"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_rename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_rename"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="重命名"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawableLeft="@mipmap/icon_pop_del"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="删除"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_bg_selector"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />
</LinearLayout>