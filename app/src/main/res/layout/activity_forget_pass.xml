<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.login.ForgetPassActivity">

    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:navigationIcon="@mipmap/icon_back"
        app:popupTheme="@style/ToolbarPopupTheme">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="忘记密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_40"
        android:paddingTop="@dimen/dp_60"
        android:paddingRight="@dimen/dp_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableRight="@mipmap/icon_down"
                android:gravity="center"
                android:paddingRight="@dimen/dp_20"
                android:text="+86"

                android:textColor="@color/black">

            </TextView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEtName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入手机号"
                android:singleLine="true"></cn.nzy.library.ClearEditText>


        </LinearLayout>

        <View
            android:id="@+id/mView01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvPass"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/black">

            </TextView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEtPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入验证码"
                android:singleLine="true"></cn.nzy.library.ClearEditText>


            <com.feemoo.widght.BorderTextView
                android:id="@+id/send_code_btn"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:contentBackColor="@color/button_confirm"
                app:cornerRadius="@dimen/dp_10"
                app:strokeColor01="#999999"
                app:strokeWidth01="0dp" />

        </LinearLayout>

        <View
            android:id="@+id/mView02"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/line"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvNewPass"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textColor="@color/black">

            </TextView>

            <cn.nzy.library.ClearEditText
                android:id="@+id/mEdNewPass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入新密码"
                android:singleLine="true"></cn.nzy.library.ClearEditText>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.feemoo.widght.BorderTextView
                android:id="@+id/mTvNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:contentBackColor="@color/button_confirm"
                app:cornerRadius="@dimen/dp_5"
                app:strokeColor01="#999999"
                app:strokeWidth01="0dp"></com.feemoo.widght.BorderTextView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>